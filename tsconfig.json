{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "es6",
    "noImplicitAny": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "target": "es5",
    "typeRoots": [ "./types", "./node_modules/@types"],
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules",]
}